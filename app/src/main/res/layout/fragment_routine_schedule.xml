<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <Spinner
        android:id="@+id/testSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/calendar_detail_button"
        app:backgroundTint = "@null"
        android:padding="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!--        android:weightSum="7"-->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="7"
            android:background="@color/black"
            >
            <Button
                android:id="@+id/dayOfWeek0"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:background="@drawable/schedule_day_of_week_btn_true"
                app:backgroundTint = "@null"
                android:text="일"
                android:padding="0dp"
                android:layout_marginHorizontal="10dp"

                >
            </Button>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="월"
                android:textColor="@color/black"
                android:background="@drawable/schedule_day_of_week_btn_false"
                app:backgroundTint = "@null"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"

                android:layout_marginHorizontal="10dp"
                >
            </Button>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:background="@drawable/schedule_day_of_week_btn_false"
                app:backgroundTint = "@null"

                android:text="화"
                android:padding="0dp"
                android:layout_marginHorizontal="10dp">

            </Button>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:background="@drawable/schedule_day_of_week_btn_false"
                app:backgroundTint = "@null"
                android:text="수"
                android:padding="0dp"
                android:layout_marginHorizontal="10dp">
            </Button>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:background="@drawable/schedule_day_of_week_btn_false"
                app:backgroundTint = "@null"
                android:text="목"
                android:padding="0dp"
                android:layout_marginHorizontal="10dp">
            </Button>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:background="@drawable/schedule_day_of_week_btn_false"
                app:backgroundTint = "@null"

                android:text="금"
                android:padding="0dp"
                android:layout_marginHorizontal="10dp">
            </Button>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:background="@drawable/schedule_day_of_week_btn_false"
                app:backgroundTint = "@null"

                android:text="토"
                android:padding="0dp"
                android:layout_marginHorizontal="10dp">
            </Button>
        </GridLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="매일"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/startDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작일"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/startDateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
            android:drawableTint="@color/black"
            android:text="날짜"
            android:textColor="@color/black"
            android:background="@drawable/calendar_detail_button"
            app:backgroundTint = "@null"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            />
        <Button
            android:id="@+id/startTimeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_baseline_access_time_24"
            android:drawableTint="@color/black"
            android:background="@drawable/calendar_detail_button"
            app:backgroundTint="@null"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종료일"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/endDateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
            android:drawableTint="@color/black"
            android:text="날짜"
            android:textColor="@color/black"
            android:background="@drawable/calendar_detail_button"
            app:backgroundTint = "@null"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>
        <Button
            android:id="@+id/endTimeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_baseline_access_time_24"
            android:drawableTint="@color/black"
            android:background="@drawable/calendar_detail_button"
            app:backgroundTint="@null"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/scheduleTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textWebEditText"
        android:hint="일정을 입력하세요"
        android:privateImeOptions="defaultInputmode=korea"/>
    <EditText
        android:id="@+id/scheduleContentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="15"
        android:minLines="2"
        android:maxLines="20"
        android:scrollbars="vertical"
        android:hint="내용을 입력하세요"
        android:gravity="top"
        android:privateImeOptions="defaultInputmode=korean"/>


</LinearLayout>




